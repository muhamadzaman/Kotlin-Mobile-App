<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:maxHeight="500dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toTopOf="@id/btn_encode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_encode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Encode"
        app:layout_constraintTop_toBottomOf="@+id/et_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_result_label"
        android:layout_width="wrap_content"
        android:layout_margin="24dp"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_encode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_encoded_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Encoded Result"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_decode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Decode"
        app:layout_constraintTop_toBottomOf="@+id/tv_encoded_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_decoded_result_label"
        android:layout_width="wrap_content"
        android:layout_margin="24dp"
        android:layout_height="wrap_content"
        android:text="Decoded Result"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_decode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_decoded_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Decoded Result"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_decoded_result_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>